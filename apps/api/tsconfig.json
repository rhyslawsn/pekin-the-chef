{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",

    "lib": ["es2021"],
    "skipLibCheck": true,
    "outDir": "build",

    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,

    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "noEmit": true,

    "noImplicitAny": false,
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "exclude": ["build", "node_modules"]
}
